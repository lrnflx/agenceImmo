{% extends 'base.html.twig' %}

{% block body %}

<div class="jumbotron">
    <div class="container">
        {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
                
            </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="container text-center margin-top">
    <h1 class="margin-top"> Tous nos biens </h1>
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4 mt-4">

                    {% include 'property/property.html.twig' %}
        
                </div>
            {% endfor %}
        </div>
        {# display navigation #}
        <div class="mx-auto d-inline-block  mt-4">
            {{ knp_pagination_render(properties) }}
        </div>
</div>

{% endblock %}
